@model Church
@{
    Layout = "_Layout_Auth";
}

<div class="content w-75 ">

    <!-- Pills navs -->
    <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link active" id="tab-login" data-mdb-toggle="pill" href="#pills-login" role="tab"
               aria-controls="pills-login" aria-selected="true">Login</a>
        </li>

        <li class="nav-item" role="presentation">
            <a class="nav-link" id="tab-register" data-mdb-toggle="pill" href="#pills-register" role="tab"
               aria-controls="pills-register" aria-selected="false">Add new Church</a>
        </li>

    </ul>
    <!-- Pills navs -->
    <!-- Pills content -->
    <div class="tab-content">
        @*Login*@
        <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
            <form asp-action="Login" method="post">

                <!-- Username -->
                <div class="form-outline mb-4">
                    <input type="text" name="Username" placeholder="Username" class="form-control" required />
                    <label class="form-label" for="Username">Username</label>
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    <input type="password" name="Password" placeholder="Password" class="form-control" required />
                    <label class="form-label" for="Password">Password</label>
                </div>


                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>

            </form>
        </div>

        @*create new church--------------------*@
        <div class="tab-pane fade" id="pills-register" role="tabpanel" aria-labelledby="tab-register">
            <form asp-action="CreateChurch" class="p-4" method="post">
                <h4 class="text-center">Church informations</h4>
                <div class="row  mb-4">
                    <div class="form-outline col">
                        <input type="text" asp-for="ChurchName" class="form-control" />
                        <label class="form-label" asp-for="ChurchName"></label>
                    </div>
                    <div class="form-outline col">
                        <input type="text" asp-for="Address" class="form-control" />
                        <label class="form-label" asp-for="Address"></label>
                    </div>
                </div>

                <div class="w-100 border bg-grey mt-2 mb-2"></div>

                <h4 class="text-center">Default administrator</h4>

                <div class="row mb-4">
                    <!-- Username -->
                    <div class="form-outline mb-4">
                        <input type="text" name="Username" placeholder="Username" class="form-control" required />
                        <label class="form-label" for="Username">Username</label>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <input type="password" name="Password" placeholder="Password" class="form-control" required />
                        <label class="form-label" for="Password">Password</label>
                    </div>
                </div>

                <div class="w-100 border bg-grey mt-2 mb-2"></div>
                
                @*Person information -------------*@
                <h4 class="text-center">Personel informations</h4>
                <div class="row mb-4">
                    <div class="form-outline col">
                        <input type="text" name="Name" placeholder="Name" class="form-control" required />
                        <label class="form-label" for="Name">Name</label>
                    </div>
                     <div class="form-outline col">
                        <input type="text" name="Surname" placeholder="Surname" class="form-control" required />
                        <label class="form-label" for="Surname">Surname</label>
                    </div>
                </div>

                 <div class="row mb-4">
                    <div class="form-outline col">
                        <input type="email" name="Email" placeholder="Email" class="form-control" required />
                        <label class="form-label" for="Email">Email</label>
                    </div>
                </div>
                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-3">Create</button>
            </form>
        </div>
    </div>
    <!-- Pills content -->
</div>
