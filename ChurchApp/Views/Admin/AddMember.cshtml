@model ChurchApp.Models.Member

@{
    ViewData["Title"] = "AddMember";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="content">
    <div class="card">
        <div class="card-header">
            <div>
                <a asp-action="ViewMembers" asp-controller="Admin" class="btn btn-info">Back to List</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="card col">
            <div class="card-header">
                <h3>Add Member</h3>
            </div>
            <div class="card-body">
                <form asp-action="AddMember" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Member Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname" class="control-label"></label>
                        <input asp-for="Surname" class="form-control" placeholder="Member Surname" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Member Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
