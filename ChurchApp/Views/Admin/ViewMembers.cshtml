@model IEnumerable<ChurchApp.Models.Member>

@{
    ViewData["Title"] = "ViewMemebers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <h1>Members</h1>


    <table class="table table-bordered table-striped datatable">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a asp-action="EditMember" class="btn btn-warning" asp-route-id="@item.IdMember">Edit</a>
                     @*   <a asp-action="DetailsMember" class="btn btn-info" asp-route-id="@item.IdMember">Details</a>*@
                        @if (  item.Users.Count() == 0||  item.Users?.FirstOrDefault()?.IsDefault == false)
                        {
                            <a asp-action="DeleteMember" class="btn btn-danger" asp-route-id="@item.IdMember" onclick="return confirm('Are you sure you want to delete this member?')">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

